<Window x:Class="Bestell__und_Lagermanagement.Lieferanten_Verwaltung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bestell__und_Lagermanagement"
        mc:Ignorable="d"
        Title="Lieferanten_Verwaltung" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Lieferanten Verwaltung" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontStyle="Italic"/>
        <Button Content="Lieferanten Ansicht" Grid.Row="2" Margin="10 10" x:Name="lieferanten_ansicht" Click="lieferanten_ansicht_Click"/>
        <Button Content="Lieferanten bearbeiten" Grid.Row="3" Margin="10 10" x:Name="lieferanten_bearbeiten" Click="lieferanten_bearbeiten_Click"/>
        <Button Content="Lieferanten hinzufügen" Grid.Row="4" Margin="10 10" x:Name="lieferanten_hinzufügen" Click="lieferanten_hinzufügen_Click"/>
        <Button Content="Zurück" Grid.Row="6" Margin="10 10" x:Name="zurück" Click="zurück_Click"/>
    </Grid>
</Window>
