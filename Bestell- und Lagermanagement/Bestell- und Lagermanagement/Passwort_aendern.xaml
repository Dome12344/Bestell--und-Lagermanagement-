<Window x:Class="Bestell__und_Lagermanagement.Passwort_aendern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bestell__und_Lagermanagement"
        mc:Ignorable="d"
        Title="Passwort_aendern" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Passwort ändern" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontStyle="Italic" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>
        <Label Content="Mitarbeiternummer:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="mitarbeiternummer" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5"/>
        <Label Content="Neues Passwort:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"/>
        <PasswordBox x:Name="neues_passwort" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5"/>
        <Label Content="Wiederholung des neues Passwort:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="wiederholung_neues_passwort" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5"/>
        <Button Content="Passwort ändern" Grid.Column="0" Grid.ColumnSpan="2" Margin="10 10" Grid.Row="6" x:Name="passwort_aendern" Click="passwort_aendern_Click"/>
        <Button Content="Zurück zum Startbildschirm" Grid.Column="2" Grid.Row="6" Margin="10 10" x:Name="zurück" Click="zurück_Click"/>
    </Grid>
</Window>
