<Window x:Class="Bestell__und_Lagermanagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bestell__und_Lagermanagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Bestell- und Lagermanagement Login" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3" FontSize="30" FontStyle="Italic"/>
        <Label Content="Benutzername:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5 5" x:Name="benutzername" Grid.ColumnSpan="3"/>
        <Label Content="Passwort:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" Margin="5 5" x:Name="passwort" Grid.ColumnSpan="3"/>
        <Label Content="Mitarbeiternummer:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="mitarbeiternummer" Margin="5 5" Grid.ColumnSpan="3"/>
        <Button Grid.Row="6" Content="Login" Margin="10 10" x:Name="login"  Grid.ColumnSpan="2" Grid.Column="0" Click="login_Click"/>
        <Button Content="Zurück zum Startbildschirm" x:Name="zurück" Grid.Column="2" Grid.Row="6" Margin="10 10" Click="zurück_Click"/>
    </Grid>
</Window>
