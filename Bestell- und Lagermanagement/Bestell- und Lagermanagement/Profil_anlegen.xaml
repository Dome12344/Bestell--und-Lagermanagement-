<Window x:Class="Bestell__und_Lagermanagement.Profil_anlegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bestell__und_Lagermanagement"
        mc:Ignorable="d"
        Title="Profil_anlegen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="Profil anlegen" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontStyle="Italic"/>
        <Label Grid.Row="2" Content="Benutzername:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5" x:Name="benutzername"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Passwort:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="passwort" Margin="5 5"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Vorname:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5" x:Name="vorname"/>
        <Label Content="Nachame:" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5" x:Name="nachname"/>
        <Label Content="Mitarbeiternummer:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6"/>
        <TextBox Margin="5 5" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="mitarbeiternummer"/>
        <Label Content="E-Mail:" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" x:Name="mail" Margin="5 5"/>
        <Label Content="Telefonnummer:" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="8" Margin="5 5" x:Name="telefonnummer"/>
        <Label Content="Diensthandynummer:" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" Margin="5 5" x:Name="diensthandynummer"/>
        <Button Content="Profil anlegen" Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="2" Margin="10 10" x:Name="profil_anlegen" Click="profil_anlegen_Click"/>
        <Button Content="Zurück zum Startbildschirm" Grid.Column="2" Grid.Row="11" x:Name="zurück" Margin="10 10" Click="zurück_Click"/>
    </Grid>
</Window>
